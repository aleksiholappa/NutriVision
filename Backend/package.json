{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node index.ts",
    "dev": "nodemon",
    "dev:full": "concurrently \"nodemon\" \"cd src/recognition && uvicorn main:app --port 3001 --reload\" \"cd src/LLM && gunicorn -w 4 -b 0.0.0.0:5000 llamaModel:app --reload\" \"cd ../Frontend && npm run dev\"",
    "test": "cross-env NODE_ENV=test ts-node --test",
    "start:test": "cross-env NODE_ENV=test ts-node index.ts",
    "build:ui": "rm -rf dist && cd ../Frontend && npm run build && cp -r dist ../Backend",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push",
    "lint": "eslint ."
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^1.3.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "globals": "^15.14.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  }
}
